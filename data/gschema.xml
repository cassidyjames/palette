<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/cassidyjames/palette/" id="com.github.cassidyjames.palette">
    <key name="window-position" type="ai">
      <default>[]</default>
      <summary>Window position</summary>
      <description>Most recent window position (x, y)</description>
    </key>
    <key name="developer-mode" type="b">
      <default>false</default>
      <summary>Developer mode</summary>
      <description>i.e. show Gtk.CSS color constants instead of hex values</description>
    </key>
    <key name="mini-mode" type="b">
      <default>false</default>
      <summary>Mini mode</summary>
      <description>Whether or not Palette is in a miniature, docked mode instead of the standard window</description>
    </key>
  </schema>
</schemalist>

